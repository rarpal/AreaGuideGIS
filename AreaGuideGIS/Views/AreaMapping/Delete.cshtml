
@{
    ViewBag.Title = "Delete";
}

<h2>Delete {{name}} {{id}}</h2>
Area ID: <input type="text" name="areaid" data-ng-model="areaGuide.areaID" readonly /><br />
Type: <input type="text" name="type" data-ng-model="areaGuide.type" readonly /><br />
Rating: <input type="number" name="rating" min="1" max="5" data-ng-model="areaGuide.rating" readonly /><br />
Average price: <input type="number" name="avgprice" data-ng-model="areaGuide.avgPrice" readonly /><br />
Notes: <textarea rows="5" name="notes" data-ng-model="areaGuide.notes" readonly /><br />
<input type="button" value="Confirm Deletetion" ng-click="deleteAreaGuide()" />
